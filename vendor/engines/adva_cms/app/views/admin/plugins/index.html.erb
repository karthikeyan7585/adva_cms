<%= render :partial => 'action_nav' %>

<% if @plugins.size > 0 -%>
  <table id="plugins" class="list" cellspacing="0" cellpadding="0">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Version</th>
        <th scope="col">Author</th>
        <th scope="col">Homepage</th>
        <th scope="col">Configurable?</th>
      </tr>
    </thead>
    <tbody id="articles">
      <%= render :partial => 'plugin', :collection => @plugins %>
    </tbody>
  </table>
  
<% else %>
  <div class="empty">
    There currently aren't any plugins installed.
  </div>
<% end %>
