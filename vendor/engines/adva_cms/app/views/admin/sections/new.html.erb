<h2>New Section</h2>

<% form_for :section, @section, :url => admin_sections_path do |f| %>
  <fieldset>
    <p>
      <%= f.label :type %>
      <% Section.types.each do |type| %>
        <%= f.radio_button :type, type %>
        <label for="section_type_<%= type.downcase %>" class="light" style="padding-right: 5px; padding-top: 5px;">
          <%= type %>
        </label>
      <% end %>
    </p>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
  </fieldset>  
  <p class="buttons">
    <%= submit_tag 'Save' %>
  </p>  
<% end %>