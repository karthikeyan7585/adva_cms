<% split_form_for :product, @product, :url => admin_products_path, :html => {:multipart => true, :id => 'content_form'} do |f| -%>
  <%= render :partial => 'form', :locals => {:f => f} %>  
  <p class="buttons">
    <%= submit_tag 'Add Product' %> or 
    <%= link_to "cancel", admin_products_path %>
  </p>
<% end -%>