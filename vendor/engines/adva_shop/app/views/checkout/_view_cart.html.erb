<h2>CART</h2>
<% products = get_products_in_cart %>

<% unless products.blank? %>

<div class="clearing" style="display:inline;float:left;margin:0;padding:0;width: 100%">
	<div>
		<table width="100%">
			<tr style="padding-top: 50px">
				<th align="center" bgcolor="#CCCCCC" width="20%" >
					<b>Name</b>
				</th>
				<th align="center" bgcolor="#CCCCCC" width="15%">
					<b>Vendor</b>
				</th>
				<th bgcolor="#CCCCCC" width="10%">
					<b>Quantity</b>
				</th>
				<th align="center" bgcolor="#CCCCCC" width="15%">
					<b>Price</b>
				</th>
				<th align="center" bgcolor="#CCCCCC" width="15%">
					<b>Total</b>
				</th>
					
				<th align="center" bgcolor="#CCCCCC" width="10%">
					<b>Remove</b>
				</th>
				<th align="center" bgcolor="#CCCCCC"  width="10%">
					<b>Update</b>
				</th>
			</tr>
		</table>
	</div>
</div>

<% products.each do |product|%>

	<div id="<%= dom_id product %>" class="clearing" style="display:inline;float:left;margin:0;padding:0;width: 100%;">
		<div>
			<table width="100%">
				<tr>
					<td align="center" width="20%">
						<h2><%= link_to_content product %></h2>
					
						<% cache do %>
						<%= image_tag(image_path(product), :size => "50x50") %>					
						<% end %>
					
					</td>
					<td align="center" width="15%">
						<%= product.vendor_name %>
					</td>
					<% form_tag(update_cart_path(@section,product)) do %>
						<td align="center" width="10%">
							<%= text_field_tag("product_quantity_#{product.id}", product_quantity(product), :size => 1) %>
						</td>						
						<td align="center" width="15%">
							<b>$<%= product.price %></b>
						</td>
						<td align="center" width="15%">
							<b>$<%= total_price(product) %></b>
						</td>
						<td align="center" width="10%">
							<%= link_to(image_tag('/images/icons/delete.png', :style => "border: none"), remove_from_cart_path(@section, product)) %>
						</td>
						<td align="center" width="10%">
							<%= submit_tag "Update" %>
						</td>
					<% end %>
				</tr>
			</table>
		</div>
	</div>
<% end %>
<p>
	<%= button_to "Checkout", select_addresses_path %>
</p>
<% else %>
	<p> No items in the cart. Go back to <b><%= link_to "Shop", :action=>"index" %></b>. </p>
<% end %>

