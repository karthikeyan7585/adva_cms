	<% 	product = product_description %>

	<div id="<%= dom_id product %>" >
		<div>
			<table width="100%">
				<tr>
					<td align="center" width="30%">
						<h2><%=product.name %></h2>
						
						<% cache do %>
						<%= image_tag(image_path(product), :size => "50x50") %>
						<% end %>
						<br />
						<%= link_to_content_comments product unless mode == :single %><br />
						<%= links_to_content_categories product, "in: %s<br />" %>
						<%= links_to_content_tags product, "tagged: %s<br />" %><br />
					</td>
					<td >
						<%= product.vendor_name %>
					</td>
					<td >
						<b>$<%= product.price %></b>
					</td>
					<% form_tag(:action => "index", :product_id=> product.id) do %>
						<td width="10%">
							<%= text_field_tag("product_quantity_#{product.id}", product_quantity(product), :size => 1) %>
						</td>
						<td width="20%">
							<%= submit_tag "Add to cart" %>
						</td>
					<% end %>
				</tr>
			</table>
		</div>
	</div>
