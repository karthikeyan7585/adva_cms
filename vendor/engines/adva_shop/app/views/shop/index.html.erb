<%= stylesheet_link_tag "adva_shop.css" %>
<%= javascript_include_tag :defaults %>
<!-- Middle Part Start -->
<div id="middle">
    <table width="100%" border="0" cellspacing="0" cellpadding="10">
        <tr>
            <td>
                <div id="gridcontainer">
                    <table width="100%" border="0" cellpadding="10" cellspacing="0">
                        <tr>
                            <td valign="top">
                                <table width="100%" align="center" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td align="center">
                                            <table width="600" border="0" align="left" cellpadding="0" cellspacing="1" bgcolor="#FFFFFF" class="borderblue">
                                                <tr>
                                                    <td class="row1a">
                                                        <%= link_to 'Name',  sort_param('name', :alias => 'name') %>
                                                    </td>
                                                    <td class="row1b">
                                                        <%= link_to 'Vendor',  sort_param('vendor_name', :alias => 'vendor_name') %>
                                                    </td>
                                                    <td class="row1a">
                                                        <%= link_to 'Price',  sort_param('price', :alias => 'price') %>
                                                    </td>
                                                    <td class="row1a">
                                                        Quantity
                                                    </td>
                                                    <td class="row1a">
                                                        <strong>Add to cart</strong>
                                                    </td>
                                                </tr>
                                                <%@products.each do |product| %>
													<% form_tag(carts_path(@section)) do %>
		                                                <tr>
		                                                    <td class="row2">
		                                                        <h2><%= link_to_content product %></h2>
		                                                        <%= image_tag(image_path(product), :size => "50x50") %>
		                                                        <br/>
		                                                        <%= link_to_content_comments product %>
		                                                        <br/>
		                                                        <%= links_to_content_categories product, "in: %s<br />" %>
		                                                        <%= links_to_content_tags product, "tagged: %s<br />" %>
		                                                        <br/>
		                                                    </td>
		                                                    <td class="row2a">
		                                                        <%= product.vendor_name %>
		                                                    </td>
		                                                    <td class="row2">
		                                                        <strong>$<%= product.price %></strong>
		                                                    </td>
		                                            		<td class="row2a">
																<%= text_field_tag("product_quantity_#{product.id}", product_quantity(product), :size => 1) %>
																<%= hidden_field_tag("product_id", product.id) %>
															</td>
															<td class="row2a">
		                                                        <%= submit_tag "Add to cart" %>
		                                                    </td>
		                                                </tr>
													<% end %>
                                                <% end %>
												<tr>
													<td colspan=5 align="right">
													  <%= will_paginate @products %>
													</td>
												</tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>                        
                    </table>
					
					<%= render :partial => 'carts/cart_info_widget' %>                
                    <%= render :partial => 'search_widget' %>
                    <%= render :partial => 'order_status_widget' %>
                    <%= render :partial => 'categories_widget' %>
                </div>
            </td>
        </tr>
    </table>
</div>
