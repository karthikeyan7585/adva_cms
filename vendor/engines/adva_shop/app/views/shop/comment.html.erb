<% if @product %>
  <%= render :partial => 'shop/product', :object => @product, :locals => {:mode => :single} %>
  <%= render :partial => 'comments/list', :locals => {:commentable => @product, :comments => @product.approved_comments} %>
  <% if @product.accept_comments? %>
    <%= render :partial => 'comments/form', :locals => {:commentable => @product} %>
  <% end %>
<% end %>