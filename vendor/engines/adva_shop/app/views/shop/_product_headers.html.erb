			<tr style="padding-top: 50px">
				<th align="center" bgcolor="#CCCCCC" width="30%" style="cursor: pointer" <%= "onclick=\"#{remote_function(:url => {:action => 'index'}, :update => "page", :with=>"'sort_field=name&sort_order=#{sort_order}'")}\"" %> >
					<b>Name</b> <%= #image_tag("/images/arrow_sort_dnblk.gif") 
								%>
				</th>
