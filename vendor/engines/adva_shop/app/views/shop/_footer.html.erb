<% content_for :footer do %>
<div id="footer" class="clearing">
    <% if !@section.categories.blank? %>
    <div id="category_listing" class="clearing">
        <h4>Categories</h4>
        <ul>
            <% @section.categories.each do |category| %>
            <li>
                <%= link_to_category @section, category %>
            </li>
            <% end %>
        </ul>
    </div>
    <% end %>
</div>
<div id="order_tracker">
    <%= link_to 'View your Order Status', order_status_path(@section) %>
</div>
<div id="pagination" class="clearing" align="right">
    <%= will_paginate @products %>
</div>
<%= render :partial => 'shared/footer' %>
<%end %>
