<br><% content_for :footer do %>
<div id="footer" class="clearing">

	</div>
	<% if !@section.categories.blank? %>
      <div id="category_listing" class="clearing">
        <h4>Categories</h4>
        <ul>
        <% @section.categories.each do |category| %>
          <li><%= link_to_category @section, category %></li>
        <% end %>
        </ul>
      </div>
	  
    <% end %>
	
	<div id="pagination" class="clearing" align="right">
	<%= will_paginate @products %>
	</div>
	
	
  
  <ul id="feeds">
    <li><%= link_to 'Entries feed', formatted_shop_url(@section, :format => :atom) %></li>
    <li><%= link_to 'Comments feed', formatted_shop_comments_url(@section, :format => :atom) %></li>
  </ul>
<%= render :partial => 'shared/footer' %>
<%end%>
