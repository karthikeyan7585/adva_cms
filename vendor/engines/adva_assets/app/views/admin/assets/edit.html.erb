<%= render :partial => "action_nav" %>

<% form_for @asset, :url => admin_asset_path, :html => { :multipart => true } do |f| %>
  <p>
    <%= link_to asset_image_for(@asset, :thumb), @asset.public_filename %>
  </p>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :tag_list, 'Tags' %> <span class="hint">Enter one or more tags separated by a comma or a space (for example, <em>"Web Dev" Tutorials</em> or <em>Web Dev, Tutorials</em>).</span>
    <%= f.text_field :tag_list %>
  </p>  
  <p>
    <label for="asset_uploaded_data">Select a file</label>
    <%= f.file_field :uploaded_data %>
  </p>
  <p class="buttons">
    <%= submit_tag 'Save Asset' %>
    or <%= link_to 'cancel', admin_assets_path %>
  </p>
<% end -%>