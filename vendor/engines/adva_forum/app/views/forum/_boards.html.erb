<h2>
  <%= @section.title %>
  <span class="meta">
    <!-- <%#= pluralize_str @section.topics_count, '%s topic' %>,
    <%#= pluralize_str @section.comments_count, '%s post' %> &middot;
    <%#= link_to 'New topic', new_topic_path(@section) %> -->
  </span>
</h2>

<table id="boards" class="list">
  <thead>
    <tr>
      <th></th>
      <th width="30%"></th>
    </tr>  
  </thead>
  <tbody>
  <% @section.boards.each do |board| %>
    <tr id="<%= dom_id board %>">
      <td>
        <h3><%= link_to board.title, forum_board_path(@section, board) %></h3>
        <p><%= board.description %></p>
      </td>
      <td>
        <%= pluralize_str board.topics_count, '%d topic' %>, 
        <%= pluralize_str board.comments_count, '%d post' %><br>
        <%= board.last_updated_at.inspect %>
        <%= 'by ' + board.last_author_name if board.last_author_name %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
