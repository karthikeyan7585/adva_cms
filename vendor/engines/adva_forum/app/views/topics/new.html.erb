<h2>New topic</h2>
<%= error_messages_for :topic %>
<% form_for :topic, :url => topics_path(@section) do |f| -%>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <p>
    <%= submit_tag 'Post Topic' %>
    <%= link_to_remote_comment_preview %> or
    <img src="/images/indicator.gif" id="comment-preview-spinner" style="display: none;" />
    <%= link_to 'Cancel', forum_path(@section) %>
  </p>
<% end %>
