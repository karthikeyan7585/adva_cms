<h2>Boards</h2>

<% unless @boards.empty? %>
  <p class="hint">
    <%= link_to "New Board", new_admin_board_path %>
    <% unless @boards.size < 2 %>
      &middot;
      <%= link_to_function 'Reorder boards', "boards_tree.toggle(this, 'Done reordering');", :id => 'reorder_boards' %>
      <%= image_tag 'indicator.gif', :id => 'boards_indicator', :style => 'display: none;' %>
    <% end %>
  </p>

  <table id="boards" class="list">
    <thead>
      <tr>
        <th scope="col">Board</th>
      </tr>
    </thead>
    <tbody id="articles-body">
    <%= render :partial => 'board', :collection => @boards %>
    </tbody>
  </table>

  <script>
