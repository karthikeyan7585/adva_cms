    //                         :loading =>  "$('boards_indicator').show()",
    //                         :complete => "$('boards_indicator').hide()" ) %>
    //   }
    // });
  </script>
  
<% else %>
  <div class="empty">
    You don't have any boards created in <%= @section.title %>. 
    <%= link_to "Create one now &raquo;", new_admin_board_path %>
  </div>
<% end %>