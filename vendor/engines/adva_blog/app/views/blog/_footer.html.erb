<% content_for :footer do %>
  <div id="footer" class="clearing">
    <% if !@section.categories.blank? %>
      <div>
        <h4>Categories</h4>
        <ul>
        <% @section.categories.each do |category| %>
          <li><%= link_to_category @section, category %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <% if !@section.article_counts_by_month.blank? %>
      <div>
        <h4>Archives</h4>
        <ul>
        <% @section.archive_months.each do |month| %>
          <li><%= link_to month.strftime('%B %Y'), blog_path(@section, :year => month.year, :month => month.month) %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <% if false and @section and !@section.tag_counts.empty? %>
      <h4>Tags</h4>
      <ul>
      <% @section.tag_counts.each do |tag| %>
        <li><%= link_to_tag @section, tag %></li>
      <% end %>
      </ul>
    <% end %>  
  </div>

  <%= render :partial => 'shared/footer' %>
  
  <ul id="feeds">
    <li><%= link_to 'Entries feed', formatted_blog_url(@section, :format => :atom) %></li>
    <li><%= link_to 'Comments feed', formatted_blog_comments_url(@section, :format => :atom) %></li>
  </ul>
<% end %>