<%= hidden_field_tag "return_to", params[:return_to] || request.request_uri %>

<fieldset>  
  <p>
    <%= f.label :body, "Comment" %>
    <%= f.text_area :body, :class => 'fat', :rows => 8  %>
  </p>
</fieldset>

<%= yield if block_given? %>

<p class="buttons">
  <%= submit_tag 'Save' %>
  <%= link_to "cancel", params[:return_to] if params[:return_to] %>
</p>