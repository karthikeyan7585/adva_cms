<div id="comments">
  <h2>Comment #<%= @comment.id %></h2>
  <p>on: <%= link_to_content @comment.commentable %></p>
  <ol>
    <%= render :partial => 'comments/comment' %>
  </ol>
</div>
<% if !@comment.approved? and has_permission? :update, :comment %>
  <%= render :partial => 'comments/form', :locals => {:commentable => @comment.commentable}  %>
<% end %>